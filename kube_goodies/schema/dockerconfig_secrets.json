{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.corezoid.com/packages/kube_goodies/dockerconfig_secrets.json",
  "type": "array",
  "default": [],
  "items": {
    "type": "object",
    "minProperties": 1,
    "required": ["name", "config"],
    "properties": {
      "name": { "type": "string", "minLength": 1, "maxLength": 1000, "default": "" },
      "config": {
        "type": "object",
        "required": ["auths"],
        "properties": {
          "auths": {
            "type": "object",
            "patternProperties": {
              ".+": {
                "type": "object",
                "required": [ "username", "password" ],
                "properties": {
                  "username": { "type": "string", "minLength": 1, "maxLength": 1000, "default": "" },
                  "password": { "type": "string", "minLength": 1, "maxLength": 1000, "default": "" }
                }
              }
            }
          }
        }
      }
    }
  }
}
