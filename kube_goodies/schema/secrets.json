{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.corezoid.com/packages/kube_goodies/secrets.json",
  "type": "array",
  "default": [],
  "items": {
    "type": "object",
    "required": ["name", "data"],
    "properties": {
      "name": { "type": "string", "minLength": 1, "maxLength": 10000},
      "data": {
        "type": "array",
        "default": [],
        "items": {
          "type": "object",
          "required": ["key", "value"],
          "properties": {
            "key": { "type": "string", "minLength": 1, "maxLength": 10000, "default": "" },
            "value": { "type": "string", "minLength": 0, "maxLength": 10000, "default": "" }
          }
        }
      }
    }
  }
}